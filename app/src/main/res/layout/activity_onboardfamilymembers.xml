<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_onboardfamilymembers"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.nyro.crimewatch.Activities.Onboardfamilymembers">

    <ViewFlipper
        android:id="@+id/viewFlipper"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">






        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView

                android:id="@+id/basicD"
                android:gravity="center"
                android:text="Enter Your Basic Details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_below="@+id/basicD"
                android:id="@+id/nametxtv"
                android:layout_width="match_parent"
                android:text="Enter Your Name"
                android:layout_height="20dp" />

            <EditText
                android:inputType="text"
                android:id="@+id/namefield"
                android:layout_below="@+id/nametxtv"
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <TextView
                android:layout_below="@+id/namefield"
                android:id="@+id/phonetextview"
                android:layout_width="match_parent"
                android:text="Enter Your Phone number"
                android:layout_height="40dp" />


            <EditText
                android:inputType="phone"
                android:layout_below="@+id/phonetextview"
                android:id="@+id/phonenumberfield"
                android:layout_width="match_parent"
                android:layout_height="50dp"

                />



        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:padding="6dp"
                android:gravity="center"
                android:id="@+id/label"
                android:layout_width="match_parent"
                android:text= "Provide Family Relative Details  "
                android:layout_height="wrap_content" />

            <TextView

                android:layout_below="@+id/label"
                android:id="@+id/fam1TV"
                android:layout_width="match_parent"
                android:text=" Name (1)"
                android:layout_height="20dp" />

            <EditText
                android:inputType="text"

                android:id="@+id/fammemberName1"
                android:layout_below="@+id/fam1TV"
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <TextView
                android:layout_below="@+id/fammemberName1"
                android:id="@+id/fam2Name"
                android:layout_width="match_parent"
                android:text="Phone Number(1)"
                android:layout_height="20dp" />

            <EditText
                android:id="@+id/phone1value"
                android:inputType="phone"
                android:layout_below="@+id/fam2Name"
                android:layout_width="match_parent"
                android:layout_height="40dp" />


            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/divider"
                android:background="@android:color/background_dark"
                android:layout_below="@+id/phone1value"
                android:layout_width="match_parent"
                android:layout_height="0dp"></LinearLayout>

            <TextView
                android:layout_below="@+id/divider"
                android:text="Name (2)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:id="@+id/name2TV"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:layout_below="@+id/name2TV"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/name2value"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_below="@+id/name2value"
                android:text="Phone Number(2)"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/phone2TV"
                android:inputType="phone"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <EditText
                android:layout_below="@+id/phone2TV"

                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:inputType="phone"
                android:ems="10"
                android:layout_marginBottom="164dp"
                android:id="@+id/phone2value"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />




        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:padding="6dp"
                android:gravity="center"
                android:id="@+id/label2"
                android:layout_width="match_parent"
                android:text= "Provide Family Relative Details  "
                android:layout_height="wrap_content" />

            <TextView

                android:layout_below="@+id/label2"
                android:id="@+id/fam2TV"
                android:layout_width="match_parent"
                android:text=" Name (3)"
                android:layout_height="20dp" />

            <EditText
                android:inputType="text"

                android:id="@+id/fammemberName3"
                android:layout_below="@+id/fam2TV"
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <TextView
                android:layout_below="@+id/fammemberName3"
                android:id="@+id/fam3Name"
                android:layout_width="match_parent"
                android:text="Phone Number(3)"
                android:layout_height="20dp" />

            <EditText
                android:id="@+id/phone3value"
                android:inputType="phone"
                android:layout_below="@+id/fam3Name"
                android:layout_width="match_parent"
                android:layout_height="40dp" />


            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/divider1"
                android:background="@android:color/background_dark"
                android:layout_below="@+id/phone3value"
                android:layout_width="match_parent"
                android:layout_height="0dp"></LinearLayout>

            <TextView
                android:layout_below="@+id/divider1"
                android:text="Name (4)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:id="@+id/name4TV"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:layout_below="@+id/name4TV"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/name4value"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_below="@+id/name4value"
                android:text="Phone Number(4)"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/phone4TV"
                android:inputType="phone"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <EditText
                android:layout_below="@+id/phone4TV"

                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:inputType="phone"
                android:ems="10"
                android:layout_marginBottom="164dp"
                android:id="@+id/phone4value"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />




        </RelativeLayout>









    </ViewFlipper>
    <RelativeLayout

        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">

        <Button
            android:text="NEXT"
            android:id="@+id/next"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button

            android:text="PREV"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/prev" />
    </RelativeLayout>
</RelativeLayout>
